<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/near_black"
    tools:context=".fragments.QrcodeFragment">

    <ImageView
        android:id="@+id/iv_gradasi_biru"
        android:layout_width="373dp"
        android:layout_height="332dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/gd_biru_atas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gradasi_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_moovie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Tiket Anda"
        android:textColor="@color/white"
        android:textSize="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_show_tiket"
        android:layout_width="374dp"
        android:layout_height="515dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/show_tiket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_judul" />



</androidx.constraintlayout.widget.ConstraintLayout>